
// 예제 : 1차원의 배열에 값 저장과 출력 방법 

public class G01 {

	public static void main(String[] args) {
		
		// 배열 생성 문법1.
//		자료형 [] 변수명 = new  자료형 [원소 갯수];

		//		5명의 점수를 정수로 저장하기 위한 배열 선언( 생성)
		int []score = new int[5]; 
		
		// 	배열 메모리의 주소번지는 랜덤으로 16진수로 붙는다.
						//  {  0, 0, 0, 0, 0 }
						//		0  1  2  3  4			< -- index
		// | 0X12 | = 	 	
		
		// 생성한 배열의 각칸(원소)에 접근해서 값을 저장하는 문법
//		배열명[index] = 저장할 값;
		score[0] 		   =  95;
	}

}
